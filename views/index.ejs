<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="	https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <script src="	https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
     
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
</head>
<body>
    <!-- navbar code goes here -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">pdfGPT</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              </ul>
           
            <form class="d-flex" role="search">
              <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
              <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
          </div>
        </div>
      </nav>
      
         
      <!-- next to navbar -->
      <div class="px-4 py-5 my-5 text-center">
        <img class="d-block mx-auto " src="./logo.jpg" alt="" width="150" height="70" id="logo">
<style>
  #logo{
    border-radius: 50%;
  }
</style>
        <h1 class="display-5 fw-bold text-body-emphasis">chat with your pdf</h1>
     
       
       <div class="container w-50">
     <div class="card" id="card2">
          <div class="card-body">
            <h2>  Enter the pdf to chat with :</h2> <br>
            <form action="/parse-pdf" method="POST" enctype="multipart/form-data">
              <input type="file" name="pdfFile" required>
              <button type="submit">Parse PDF</button>
          </form>
      </div>
      </div>
      

  
         <!-- card code goes here -->
         <% if(locals.code) { %>
         <div class="card my-4">
          <div class="card-body">
            <p><%= code %></p>
          </div>
        </div>
        <%  } %>

        <% if(locals.answer) { %>
          <div class="card my-4">
           <div class="card-body">
             <p><%= answer %></p>
           </div>
         </div>
         <%  } %>

        
        <form action="/answer-question" method="POST" class="d-flex justify-content-center align-items-center" >
          <input type="text" name="question" placeholder="Enter your question" required id="box" >
          <input type="hidden" name="history" value="<%= JSON.stringify(history) %>">
          <button type="submit" id="btn" >submit</button>
      </form>
          
      
        

     

           </div>
           </div>
           
     <style>
      #btn{
        height: 40px;
         
      }
      #box{
        margin-top: 5px;
        margin-top: 10px;
        width: 600px;
        margin: 10px;
        padding: 8px;
      }
     </style>
     
           

        </div>
        </form>
        <h3> </h3>
          
        </div>
      </div>
      


      
     
      <!-- searchbar code goes here -->
      

      <script>
    
    const dropdownToggle = document.querySelector('.dropdown-toggle');
const dropdownMenu = document.querySelector('.dropdown-menu');

dropdownMenu.addEventListener('click', (event) => {
  const selectedOption = event.target.textContent;
  dropdownToggle.textContent = selectedOption;
});

      </script>

</body>
</html>